@model bug_tracker_web.ViewModel.HomeViewModel

@{
    ViewData["Title"] = "Bug Tracker Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Bug Tracker Dashboard</h1>

    <!-- Cards -->
    <div class="row mb-3">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Projects</h5>
                    <p class="card-text">@Model.TotalProjects</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Tickets Pending</h5>
                    <p class="card-text">@Model.TotalBugs</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Critical Ticket Comments</h5>
                    <p class="card-text">@Model.TotalComments</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Bugs Over Time</h5>
                    <canvas id="bugChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Most Bugs by Project</h5>
                    <canvas id="projectChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Personnel Table -->
    <div class="row mt-3">
        <div class="col-md-12">
            <h2>Personnel</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Work Type</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>Zip Code</th>
                        <th>Active</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Personnel)
                    {
                        <tr>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.WorkType</td>
                            <td>@user.Address</td>
                            <td>@user.City</td>
                            <td>@user.ZipCode</td>
                            <td>@(user.IsOnline ? "Active" : "Inactive")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Bug Chart
        var bugChartCanvas = document.getElementById('bugChart').getContext('2d');
        var bugChart = new Chart(bugChartCanvas, {
            type: 'line',
            data: {
               labels: [
                    @foreach (var bugDate in Model.BugsOverTime)
                    {
                        <text>"@bugDate",</text>
                    }
                ],

                datasets: [
                    {
                        label: 'Bugs',
                        data: [
                            @foreach (var bugDate in Model.BugsOverTime)
                            {
                                <text>"@bugDate",</text>
                            }
                        ],
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    }
                ]

            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: {
                        display: true,
                        title: {
                            display: true,
                            text: 'Time'
                        }
                    },
                    y: {
                        display: true,
                        title: {
                            display: true,
                            text: 'Number of Bugs'
                        }
                    }
                }
            }
        });

        // Project Chart
        var projectChartCanvas = document.getElementById('projectChart').getContext('2d');
        var projectChart = new Chart(projectChartCanvas, {
            type: 'pie',
            data: {
                labels: ["@Model.ProjectsWithMostBugs.ProjectName"],
                datasets: [
                    {
                        data: [@Model.ProjectsWithMostBugs.Bugs.Count],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(255, 159, 64, 0.2)'
                        ]
                    }
                ]
            },

                options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'bottom'
                    }
                }
            }
        });
    }
</script>

}







