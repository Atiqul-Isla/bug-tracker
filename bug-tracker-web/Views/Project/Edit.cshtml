@model bug_tracker_web.Models.Project

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="edit-page  border rounded p-4" style="background-color: #f5f7fa;">
        <h1 class="mb-4">Edit @Model.ProjectName</h1>

        <div class="project-details">
            <hr />

            <div class="row">
                <div class="col-md-6">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ProjectID" />

                        <div class="form-group mb-3">
                            <label asp-for="ProjectName" class="control-label mb-1">Name</label>
                            <input asp-for="ProjectName" class="form-control" />
                            <span asp-validation-for="ProjectName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ProjectType" class="control-label mb-1">Type</label>
                            <input asp-for="ProjectType" class="form-control" />
                            <span asp-validation-for="ProjectType" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ProjectDescription" class="control-label mb-1">Description</label>
                            <textarea asp-for="ProjectDescription" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="ProjectDescription" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ProjectVersion" class="control-label mb-1">Version</label>
                            <input asp-for="ProjectVersion" class="form-control" />
                            <span asp-validation-for="ProjectVersion" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ProjectCreatedAt" class="control-label mb-1">Creation</label>
                            <input asp-for="ProjectCreatedAt" class="form-control" />
                            <span asp-validation-for="ProjectCreatedAt" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="SelectedUserIds" class="control-label mb-1"></label>
                            <select asp-for="SelectedUserIds" class="form-control" asp-items="ViewBag.ProjectUsers"></select>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
