@model bug_tracker_web.Models.Project

@{
    ViewData["Title"] = "Delete";
}

<div class="container" >
    <div class="delete-page border rounded p-4" style="background-color: #f5f7fa;">
        <h1 class="mb-4">Delete</h1>

        <div class="delete-container">
            <h3 class="mb-4">Are you sure you want to delete this?</h3>
            <div class="project-details">
                <hr />

                <dl class="row">
                    <dt class="col-sm-2">Name:</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.ProjectName)</dd>

                    <dt class="col-sm-2">Type:</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.ProjectType)</dd>

                    <dt class="col-sm-2">Description:</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.ProjectDescription)</dd>

                    <dt class="col-sm-2">Version:</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.ProjectVersion)</dd>

                    <dt class="col-sm-2">Creation:</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.ProjectCreatedAt)</dd>
                </dl>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="ProjectID" />
                <input type="submit" value="Delete" class="btn btn-danger" /> 
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
