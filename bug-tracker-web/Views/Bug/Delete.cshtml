@model bug_tracker_web.Models.Bug

@{
    ViewData["Title"] = "Delete";
}
<div class="container">
    <div class="delete-page border rounded p-4 shadow" style="background-color: #f5f7fa;">
        <h1 class="mb-4">Delete @Model.BugName?</h1>

        <div class="delete-container">
            <h3 class="mb-4">Are you sure you want to delete this?</h3>
            <div class="project-details">
                <hr />

                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.BugName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.BugName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.BugStatus)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.BugStatus)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.BugSeverity)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.BugSeverity)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.BugCreatedAt)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.BugCreatedAt)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.BugDescription)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.BugDescription)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Project)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Project.ProjectID)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="ProjectID" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>